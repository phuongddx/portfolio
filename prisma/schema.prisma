generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model ContentMeta {
  id        Int      @id @default(autoincrement())
  slug      String   @unique
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  likes     Like[]
  views     View[]
}

model Like {
  id        Int      @id @default(autoincrement())
  createdAt DateTime @default(now())
  sessionId String

  contentMetaId Int?
  ContentMeta   ContentMeta? @relation(fields: [contentMetaId], references: [id], onDelete: Cascade)
  
  @@unique([sessionId, contentMetaId])
}

model View {
  id        Int      @id @default(autoincrement())
  createdAt DateTime @default(now())
  sessionId String

  contentMetaId Int?
  ContentMeta   ContentMeta? @relation(fields: [contentMetaId], references: [id], onDelete: Cascade)
}

model Project {
  id          Int      @id @default(autoincrement())
  slug        String   @unique
  title       String
  description String
  image       String?
  github      String?
  demo        String?
  featured    Boolean  @default(false)
  techStack   String[]
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model BlogPost {
  id          Int      @id @default(autoincrement())
  slug        String   @unique
  title       String
  description String
  published   Boolean  @default(false)
  featured    Boolean  @default(false)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}
